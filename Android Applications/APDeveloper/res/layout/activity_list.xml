<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apdeveloper.MainActivity"
    tools:ignore="MergeRootFrame" >
    
    <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         android:id="@+id/finalDirection"
         android:layout_alignParentTop="true"
         android:text="Direction:"/>
    <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         android:layout_below="@id/finalDirection"
         android:id="@+id/finalCoordinates"
         android:text="Coordinates:"/>
    <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/finalCoordinates"
         android:textSize="25sp"
         android:id="@+id/nothing"
         android:text="Connection Results:"/>
    <ExpandableListView 
	     android:id="@+id/scrollConnections"
	     android:layout_width="match_parent"
	     android:layout_below="@id/nothing"
        android:layout_above="@+id/saveButton"
	     android:layout_height="wrap_content"
	     android:layout_margin="7dp"/>
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:text="Save Results"
        android:id="@id/saveButton"/>
    
    
    </RelativeLayout>

